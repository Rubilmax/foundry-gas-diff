{
  "name": "foundry-gas-diff",
  "version": "3.9.1",
  "description": "Github Action reporting gas diff from Foundry gas reports",
  "author": {
    "name": "Romain (Rubilmax) Milon",
    "email": "rmilon@gmail.com",
    "url": "https://github.com/rubilmax"
  },
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "release": "yarn build && yarn package",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rubilmax/foundry-gas-diff.git"
  },
  "bugs": {
    "url": "https://github.com/Rubilmax/foundry-gas-diff/issues"
  },
  "homepage": "https://github.com/Rubilmax/foundry-gas-diff#readme",
  "keywords": [
    "foundry",
    "forge",
    "gas",
    "report",
    "hardhat"
  ],
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@octokit/core": "^4.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@actions/artifact": "^1.1.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@jest/types": "^29.2.1",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/adm-zip": "^0.5.0",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.188",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/parser": "^5.42.1",
    "@vercel/ncc": "^0.34.0",
    "adm-zip": "^0.5.9",
    "colors": "^1.4.0",
    "eslint": "^8.27.0",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.1.5",
    "jest": "^28.1.3",
    "minimatch": "^5.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.4"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  }
}
